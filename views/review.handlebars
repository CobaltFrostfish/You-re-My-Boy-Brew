
<div class="reviewCont">
	<h2 class="blogTitle text-uppercase">{{brew.name}}</h2>
	<div>Brewery Type :{{brew.brewery_type}}</div>
	<div>Address :{{brew.street}}</div>
	<div>Zip Code :{{brew.postal_code}}</div>
	<div>Phone Number :{{brew.phone}}</div>
</div>



{{#if loggedIn}}

<form class="d-flex flex-wrap justify-content-center new-rating-form ratings-form" data-reviewid={{id}}>
	{{!-- the reviewid is what ties the new rating to the page --}}
	<div class="ratings-container">
		<p class="text-center"><strong>How many Stars ‚≠ê would you give the Brewery?</strong></p>
	<div class="star-widget">
		<select name="ratingStars" id="rating_five"> 
			<option value="1">1</option>
			<option value="2">2</option>
			<option value="3">3</option>
			<option value="4">4</option>
			<option value="5">5</option>
		</select>
	</div>
	<div class="ratings-textarea">
		<textarea id='rating_description' name="rating-body" placeholder="Enter your review here..." cols="30"
			rows="2"></textarea>
	</div>
	<div class="btnComment p-2 ratings-btn">
		<button class="button btn btn-primary" type="submit">Add Review</button>
	{{!-- </div> --}}
	</div>
</form>
<div class="bg-review"></div>
{{/if}}

<h4 class="text-center">Ratings</h4>
{{#each ratings as |rating|}}
<div class="ratingCont">
	{{!-- probably need some helper code here to turn rating to stars or something --}}
	<p class="text-center ratingText" id='number'>{{rating.stars}} {{get_emoji}}</p>
	<p class="text-center ratingText" id='comment'>{{rating.comment}}</p>
	<p class="text-center ratingOwner"><span>-</span>Created by {{rating.user.username}} on {{format_date
		date_created}}<span>-</span></p>
</div>
{{/each}}


<script src="/js/ratings.js"></script>
