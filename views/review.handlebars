<div class="reviewCont">
	<div>Something should be here :{{brew.name}}</div>
	<div>Something should be here :{{brew.brewery_type}}</div>
	<div>Something should be here :{{brew.street}}</div>
	<div>Something should be here :{{brew.postal_code}}</div>
	<div>Something should be here :{{brew.phone}}</div>
	<div>Something should be here :{{id}}</div>
</div>


<div class="text">
	<div class="container blogBoxCont">
		<div class="row headerRow">
			<div class="col-8">
				<h2 class="blogTitle text-uppercase">{{brew.name}}</h2>
			</div>
			<div class="col-4">
			</div>
		</div>
		<p class="text-center blogDescTwo">{{description}}</p>
	</div>
</div>

{{#if loggedIn}}

<form class="d-flex flex-wrap justify-content-center new-rating-form" data-reviewid={{id}}>
	{{!-- the reviewid is what ties the new rating to the page --}}
	<div class="">
		<select name="ratingStars" id="rating_five">
			<option value="1">1</option>
			<option value="2">2</option>
			<option value="3">3</option>
			<option value="4">4</option>
			<option value="5">5</option>
		</select>

	</div>
	<div class="">
		<textarea id='rating_description' name="rating-body" placeholder="Enter a rating here..." cols="30"
			rows="2"></textarea>
	</div>
	<div class="btnComment p-2">
		<button class="button btn btn-primary" type="submit">Add Review</button>
	</div>
</form>

{{/if}}

<h2 class="text-center">Ratings</h2>
{{#each ratings as |rating|}}
<div class="ratingCont">
	{{!-- probably need some helper code here to turn rating to stars or something --}}
	<p class="text-center ratingText">{{rating.stars}}</p>
	<p class="text-center ratingText">{{rating.comment}}</p>
	<p class="text-center ratingOwner"><span>~</span>Created by {{rating.user.username}} on {{format_date
		date_created}}<span>~</span></p>
</div>
{{/each}}

